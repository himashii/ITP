<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pixel2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="107dp"
                    app:srcCompat="@drawable/headerharieke" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Insert Delivery Details"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.045" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Recipient's Name"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.088"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.16" />

                <EditText
                    android:id="@+id/etPersonName"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="2dp"
                    android:ems="10"
                    android:background="@drawable/cus_b2"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="?attr/colorButtonNormal"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.182" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Recipient's Phone"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.088"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.275" />

                <EditText
                    android:id="@+id/editPhone"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="2dp"
                    android:ems="10"
                    android:background="@drawable/cus_b2"
                    android:inputType="phone"
                    android:textAlignment="center"
                    android:textColor="?attr/colorButtonNormal"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.54"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.312" />


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Email"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.087"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.404" />

                <EditText
                    android:id="@+id/editEmailAddress"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="2dp"
                    android:ems="10"
                    android:background="@drawable/cus_b2"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:textColor="?attr/colorButtonNormal"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.54"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.445" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Delivery Address"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.097"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.519" />


                <EditText
                    android:id="@+id/editPostalAddress"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="2dp"
                    android:ems="10"
                    android:inputType="textPostalAddress"
                    android:textAlignment="center"
                    android:textColor="?attr/colorButtonNormal"
                    android:textStyle="bold"
                    android:background="@drawable/cus_b2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.54"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.564" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Delivery City"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.097"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.519" />

                <EditText
                    android:id="@+id/editCity"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="2dp"
                    android:ems="10"
                    android:inputType="textPostalAddress"
                    android:textAlignment="center"
                    android:textColor="?attr/colorButtonNormal"
                    android:textStyle="bold"
                    android:background="@drawable/cus_b2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.54"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.564" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="30dp"
                    android:text="Location Type"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.097"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.519" />

                <Spinner
                    android:id="@+id/type"
                    android:layout_width="314dp"
                    android:layout_height="49dp"
                    android:layout_marginLeft="90dp"
                    android:clickable="true"
                    android:entries="@array/Spinner_items"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="30dp"
                    android:text="Delivery Date"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.097"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.519" />

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:hint="Select Delivery Date"
                    android:layout_marginLeft="60dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="?attr/colorButtonNormal"
                    android:textSize="14sp"
                    android:background="@drawable/cus_b2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="30dp"
                    android:text="Special Delivery Instructions : (Optional)"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.097"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.519" />

                <EditText
                    android:id="@+id/editTextPersonName2"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/cus_b2"
                    android:ems="10"
                    android:hint="Optional"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="?attr/colorButtonNormal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.182" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Example: 'Call the recipient before the delivery.'"
                    android:textAlignment="textEnd"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/tertiary_text_light"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.097"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.519" />

                <Button
                    android:id="@+id/btnupload"
                    android:layout_width="240dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_btn1"
                    android:text="Upload"
                    android:onClick="showToast"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/print"
                    android:layout_width="240dp"
                    android:layout_height="34dp"
                    android:text="Download pdf"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cstm_btn2"
                    android:layout_marginLeft="90dp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"/>




                <Button
                    android:id="@+id/go"
                    android:layout_width="240dp"
                    android:layout_height="34dp"
                    android:text="Go to Admin Part"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cstm_btn2"
                    android:layout_marginLeft="90dp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"/>



                <LinearLayout
                    android:layout_width="222dp"
                    android:layout_height="169dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="218dp"
                        android:layout_height="35dp"
                        android:hint="Item name" />

                    <TextView
                        android:id="@+id/color"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="Colour" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="price" />

                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="Qty" />

                    <TextView
                        android:id="@+id/size"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="Size" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#FFFFFF"
                    app:srcCompat="@drawable/footerharieke" />


            </LinearLayout>


        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>